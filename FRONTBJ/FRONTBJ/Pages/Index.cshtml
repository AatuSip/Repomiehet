@page
@model IndexModel
@{
    ViewData["Title"] = "Blackjack Home";
}

<!DOCTYPE html>
<html>
<head>
    <title>Blackjack Game</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-image: url('background.png'); 
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
            color: #fff;
            text-align: center;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        h1 {
            font-size: 36px;
            margin-top: 20px;
        }

        /* Remove the footer */
        .footer {
            display: none;
        }
    </style>
</head>
<body>
    <div class="container text-center">
        <h1 class="display-4">Welcome to Blackjack</h1>
        <p class="lead">Play a game of <a asp-page="PlayBlackjack">Blackjack</a> and test your luck!</p>
    </div>

</body>
</html>
