@page
@model FRONTBJ.Pages.PlayBlackjackModel
@{
    ViewData["Title"] = "Play Blackjack";
}

<!DOCTYPE html>
<html>

<head>
    <title>Blackjack Game</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #075f30;
            color: #fff;
            text-align: center;
            margin: 0;
            padding: 0;
        }

        h1 {
            font-size: 36px;
            margin-top: 20px;
        }

        #game-container {
            display: flex;
            justify-content: space-around;
            align-items: center;
            margin-top: 20px;
        }

        .hand {
            background-color: #222;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 5px 10px rgba(0, 0, 0, 0.3);
        }

        .hand ul {
            list-style: none;
            padding: 0;
        }

        .hand ul li {
            display: inline-block;
            margin: 5px;
            background-color: #333;
            padding: 10px;
            border-radius: 5px;
        }

        #score {
            margin-top: 20px;
        }

        #result {
            margin-top: 20px;
        }

        #actions {
            margin-top: 20px;
        }

        button {
            padding: 10px 20px;
            font-size: 18px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-right: 10px;
        }

        button:hover {
            background-color: #0056b3;
        }

        #bet-section {
            margin-top: 20px;
            color: #fff;
        }

        #bet-input {
            padding: 5px;
            font-size: 16px;
        }

        #bank-section {
            margin-top: 20px;
            color: #fff;
        }

        #bank-amount {
            margin-bottom: 10px;
        }

        #bet-button {
            padding: 10px 20px;
            font-size: 18px;
            background-color: #ffc107;
            color: #000;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-left: 10px;
        }

        #bet-button:hover {
            background-color: #ffca2c;
        }
    </style>
</head>

<body>
    <h1>Blackjack Game</h1>

    <div id="game-container">
        <div class="hand">
            <h2>Player Hand</h2>
            <ul>
                @foreach (var card in Model.PlayerHand)
                {
                    <li>@card</li>
                }
            </ul>
        </div>

        <div class="hand">
            <h2>Dealer Hand</h2>
            <ul>
                @foreach (var card in Model.DealerHand)
                {
                    <li>@card</li>
                }
            </ul>
        </div>
    </div>

    <div id="score">
        <h2>Score</h2>
        <p>Player: @Model.PlayerScore</p>
        <p>Dealer: @Model.DealerScore</p>
    </div>

    <div id="result">
        <h2>Result</h2>
        <p>@Model.GameResult</p>
    </div>

    <div id="actions">
        <form method="post">
            <button type="submit" name="action" value="Hit">Hit</button>
            <button type="submit" name="action" value="Stand">Stand</button>
            <button type="submit" name="action" value="Reset">Reset</button>
        </form>
    </div>

    <!-- Betting Section -->
    <div id="bet-section">
        <label for="bet-input">Bet:</label>
        <input type="number" id="bet-input" name="bet" min="1" max="100">
        <p>Current Bet: $0</p>
        <button id="bet-button">BET</button>
    </div>

</body>

</html>
